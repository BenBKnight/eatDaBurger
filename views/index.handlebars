<h1 class="hero title">Burger Burger Burger!!!</h1>
<div class="is-parent tile">
  <section class="section notDevoured tile is-child">
    <h2 class="subtitle">Burgers not yet Devoured!</h2>

    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block eaten=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </section>

  <section class="section devoured tile is-child">
    <h2 class="subtitle">Devoured Burgers!</h2>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block eaten=false}}
      {{/if}}
      {{/each}}
    </ul>
  </section>
</div>
<h2>Add a Burger!</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger!</button>
</form>